<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="rootGridPane" style="-fx-background-color: #D9F7F0;" xmlns="http://javafx.com/javafx/16"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.connect4game.Controller">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints maxWidth="298.0" minWidth="225.0" prefWidth="225.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane GridPane.columnSpan="2" />
        <Pane fx:id="insertedDiscsPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
        <VBox style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <TextField fx:id="playerOneTextField" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="157.0" promptText="Player One Name" style="-fx-focus-traversable: false;">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0" top="35.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="playerTwoTextField" alignment="TOP_LEFT" promptText="Player Two Name" style="-fx-focus-traversable: false;">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0" />
                    </VBox.margin></TextField>
                <Button fx:id="setNamesButton" alignment="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="194.0" text="Set Names">
                    <VBox.margin>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                    </VBox.margin></Button>
                <Label fx:id="playerNameLabel" alignment="CENTER" prefHeight="40.0" prefWidth="303.0" text="Player One" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="70.0" />
                    </VBox.margin>
                </Label>
                <Label alignment="CENTER" prefHeight="36.0" prefWidth="304.0" text="Turn" textFill="WHITE" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                </Label>
                <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</GridPane>
